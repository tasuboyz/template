  "screenshots": [
    {
      "src": "/images/screenshot-mobile.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Homepage mobile view"
    },
    {
      "src": "/images/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Homepage desktop view"
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "professional",
    "marketing"
  ],
  
  "shortcuts": [
    {
      "name": "Servizi",
      "short_name": "Services",
      "description": "Visualizza i nostri servizi",
      "url": "/#servizi",
      "icons": [
        {
          "src": "/images/icon-services.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Contatti",
      "short_name": "Contact",
      "description": "Contattaci direttamente",
      "url": "/#contatti",
      "icons": [
        {
          "src": "/images/icon-contact.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Portfolio",
      "short_name": "Portfolio",
      "description": "I nostri progetti",
      "url": "/#portfolio",
      "icons": [
        {
          "src": "/images/icon-portfolio.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/#contatti?action=email&to=%s"
    },
    {
      "protocol": "tel",
      "url": "/#contatti?action=call&number=%s"
    }
  ],
  
  "share_target": {
    "action": "/#contatti",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "file_handlers": [
    {
      "action": "/#contatti",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "application/pdf": [".pdf"],
        "text/plain": [".txt"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "handle_links": "preferred"
}
