{
  "name": "business-showcase-template",
  "version": "1.0.0",
  "description": "Template business showcase moderno e innovativo con effetti wow e design mobile-first",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/css/style.min.css css/main.css css/animations.css",
    "minify-js": "uglifyjs js/app.js -o dist/js/app.min.js",
    "optimize-images": "imagemin images/*.{jpg,png,svg} --out-dir=dist/images",
    "serve": "python -m http.server 8000",
    "dev": "browser-sync start --server --files='**/*.html, **/*.css, **/*.js'",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "validate": "html-validate index.html"
  },
  "keywords": [
    "business",
    "showcase",
    "template",
    "responsive",
    "mobile-first",
    "modern",
    "creative",
    "animation",
    "webapp"
  ],
  "author": "Business Showcase Team",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "clean-css-cli": "^5.6.2",
    "html-validate": "^8.7.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "lighthouse": "^11.4.0",
    "live-server": "^1.2.2",
    "uglify-js": "^3.17.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/business-showcase-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/business-showcase-template/issues"
  },
  "homepage": "https://github.com/yourusername/business-showcase-template#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "index.html",
    "css/",
    "js/",
    "images/",
    "README.md"
  ]
}
